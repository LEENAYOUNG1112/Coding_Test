#include<iostream>
using namespace std;

int main()
{
	int a;
	cin >> a;
	int cnt(2);

	cout << "int a;" << endl;

	for (int i = 0; i < a - 1; i++)
	{
		cout << "int ";
		for (int j = 0; j < i + 1; j++)
		{
			cout << "*";
		}
		if (i == 0)
			cout << "ptr = &a;";
		else
			cout << "ptr ";
		if (i >= 1)
		{
			cout << cnt << " = " << "&ptr" << cnt <<";" << endl;
			cnt++;
		}
		else
		{
			cout << endl;
		}
	}
}


